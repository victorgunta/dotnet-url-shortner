@page
@model dotnet_url_shortner.Pages.Links.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Link</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Link.Id" />
            <div class="form-group">
                <label asp-for="Link.ShortCode" class="control-label"></label>
                <input asp-for="Link.ShortCode" class="form-control" />
                <span asp-validation-for="Link.ShortCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link.Url" class="control-label"></label>
                <input asp-for="Link.Url" class="form-control" />
                <span asp-validation-for="Link.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link.LastUpdate" class="control-label"></label>
                <input asp-for="Link.LastUpdate" class="form-control" />
                <span asp-validation-for="Link.LastUpdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link.Expires" class="control-label"></label>
                <input asp-for="Link.Expires" class="form-control" />
                <span asp-validation-for="Link.Expires" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link.Hits" class="control-label"></label>
                <input asp-for="Link.Hits" class="form-control" />
                <span asp-validation-for="Link.Hits" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Link.Active" /> @Html.DisplayNameFor(model => model.Link.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
