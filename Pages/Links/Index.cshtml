@page
@model dotnet_url_shortner.Pages.Links.IndexModel

@{
    ViewData["Title"] = "Your URLs";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Links[0].ShortCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Links[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Links[0].LastUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Links[0].Expires)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Links[0].Hits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Links[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Links) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expires)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
